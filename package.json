{
  "name": "@swarmion-full-stack/root",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "workspaces": [
    "backend/*",
    "contracts/*",
    "frontend/*",
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build --all --parallel=4",
    "create:generator": "nx generate @nrwl/nx-plugin:generator library --project=tooling",
    "create:plugin": "nx g @nrwl/nx-plugin:plugin tooling",
    "create:service": "nx generate @swarmion-full-stack/tooling:service new-service",
    "deploy": "nx run-many --target=deploy --all --parallel=4",
    "deploy-affected": "nx affected --target=deploy",
    "generate-library": "nx generate @swarmion/nx-plugin:library",
    "generate-service": "nx generate @swarmion/nx-plugin:service",
    "graph": "nx dep-graph",
    "info": "nx run-many --target=sls-info --all --parallel=4",
    "lint-fix-all": "nx run-many --target=lint-fix-all --all --parallel=4",
    "linter-base-config": "eslint",
    "package": "nx run-many --target=package --all --parallel=4",
    "postinstall": "test -n \"$NO_PNPM_POSTINSTALL\" && syncpack format || husky install && syncpack format",
    "remove": "nx run-many --target=remove --all --parallel=4",
    "remove:service": "nx g @nrwl/workspace:remove new-service",
    "test": "nx run-many --target=test --all --parallel=4",
    "test-affected": "nx affected --target=test",
    "test-circular": "nx run-many --target=test-circular --all --parallel=4",
    "test-linter": "nx run-many --target=test-linter --all --parallel=4",
    "test-type": "nx run-many --target=test-type --all --parallel=4",
    "test-unit": "nx run-many --target=test-unit --all --parallel=4"
  },
  "dependencies": {
    "@swc/helpers": "~0.4.11",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@nrwl/devkit": "15.0.0",
    "@nrwl/jest": "15.0.0",
    "@nrwl/js": "15.0.0",
    "@nrwl/linter": "^14.8.4",
    "@nrwl/nx-plugin": "^15.0.0",
    "@nrwl/tao": "^14.8.4",
    "@nrwl/workspace": "^14.8.4",
    "@swarmion/nx-plugin": "^0.11.2",
    "@swc-node/register": "^1.4.2",
    "@swc/cli": "~0.1.55",
    "@swc/core": "^1.2.173",
    "@types/jest": "28.1.1",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "aws-sdk": "^2.1231.0",
    "cross-env": "^7.0.3",
    "dependency-cruiser": "^11.10.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "fresko": "^0.5.3",
    "husky": "^8.0.1",
    "jest": "28.1.1",
    "jest-environment-jsdom": "28.1.1",
    "jsonc-eslint-parser": "^2.1.0",
    "lint-staged": "^13.0.2",
    "lodash": "^4.17.21",
    "npm-audit-resolver": "^3.0.0-7",
    "nx": "^14.8.4",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "syncpack": "^7.2.2",
    "ts-jest": "28.0.5",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "^16.15.0"
  },
  "packageManager": "pnpm@7.13.4"
}
